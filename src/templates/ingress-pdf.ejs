<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Comprobante de Ingresos</title>
    <style>
      body {
        font-family: Helvetica, Arial, sans-serif;
        margin: 40px;
        font-size: 12px;
        color: #000;
      }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #f28c28;
        padding-bottom: 10px;
        margin-bottom: 20px;
      }
      .logo {
        height: 50px;
      }
      .titulo {
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        margin-top: 20px;
      }
      .section-title {
        font-size: 14px;
        font-weight: bold;
        color: #f28c28;
        margin-top: 20px;
        margin-bottom: 5px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 15px;
      }
      th {
        background-color: #f28c28;
        color: white;
        font-weight: bold;
      }
      th, td {
        border: 1px solid #999;
        padding: 5px;
        text-align: left;
      }
    </style>
  </head>
  <body>
    <header>
      <img src="<%= logoBase64 %>" class="logo" />
      <div style="text-align: right;">
        <p>Vendedor: <strong><%= sellerName %></strong></p>
        <p>Fecha: <%= date %></p>
        <p>Sucursal: <strong><%= sucursal %></strong></p>
      </div>
    </header>

    <div class="titulo">COMPROBANTE DE INGRESOS</div>

    <% if (stockData.length > 0) { %>
      <div class="section-title">Ingresos a Productos Existentes</div>
      <table>
        <thead>
          <tr>
            <th>Producto</th>
            <th>Stock actual</th>
            <th>Precio Unitario</th>
            <th>Ingresos</th>
            <th>Categor√≠a</th>
          </tr>
        </thead>
        <tbody>
          <% stockData.forEach(p => { %>
            <tr>
              <td><%= p.nombre_producto %> - <%= p.variantes %></td>
              <td><%= p.stock %></td>
              <td><%= p.precio %></td>
              <td><%= p.ingresos %></td>
              <td><%= p.categoria || "Ropa" %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <% if (variantData.length > 0) { %>
      <div class="section-title">Variantes Nuevas</div>
      <table>
        <thead>
          <tr>
            <th>Producto</th>
            <th>Variantes</th>
            <th>Stock</th>
            <th>Precio</th>
          </tr>
        </thead>
        <tbody>
          <% variantData.forEach(v => { %>
            <tr>
              <td><%= v.nombre_producto %></td>
              <td><%= v.variantes %></td>
              <td><%= v.stock %></td>
              <td><%= v.precio %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <% if (productData.length > 0) { %>
      <div class="section-title">Productos Nuevos</div>
      <table>
        <thead>
          <tr>
            <th>Producto</th>
            <th>Variantes</th>
            <th>Stock</th>
            <th>Precio</th>
          </tr>
        </thead>
        <tbody>
          <% productData.forEach(p => { %>
            <tr>
              <td><%= p.nombre_producto %></td>
              <td><%= p.variantes %></td>
              <td><%= p.stock %></td>
              <td><%= p.precio %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </body>
</html>
